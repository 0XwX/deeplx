{
  "name": "deeplx-edgeone",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "DeepLX Translation API on EdgeOne Pages",
  "scripts": {
    "dev": "npm run dev --prefix frontend",
    "build": "npm run build --prefix frontend",
    "deploy": "npm run build && npx edgeone pages deploy",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": "prettier --write"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "globals": "^15.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "simple-git-hooks": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
